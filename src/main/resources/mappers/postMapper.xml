<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.yhj3211.investment.post.dao.PostDAO">
 
 	
 <!-- 글 쓰기 -->
 	<insert id="insertPost"
 			parameterType="map">
 		
 		INSERT INTO `post`
 		(
 			`userId`
 			, `userName`
 			, `userNickname`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES(
 			#{userId}
 			, #{userName}
 			, #{userNickname}
 			, #{title}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	
 	
 	</insert>
 
 <!-- 이미지 없이 글 쓰기 -->
 
 	<insert id="insertPostNoneImage"
 			parameterType="map">
 	
 		INSERT INTO `post`
 			(
 				`userId`
 				, `userName`
 				, `userNickname`
 				, `title`
 				, `content`
 				, `createdAt`
 				, `updatedAt`
 			) VALUES(
 				#{userId}
 				, #{userName}
 				, #{userNickname}
 				, #{title}
 				, #{content}
 				, now()
 				, now()
 			)
 			
	</insert>
 
 	<!-- postList가져오기 -->
	<select id="selectPostList"
			resultType="com.yhj3211.investment.post.model.Post">
			
		SELECT
			`id`
			, `userId`
			, `userNickname`
			, `userName`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
			
	</select>
 	
	<!-- 포스트 상세 -->
	<select id="selectDetailPost"
			resultType="com.yhj3211.investment.post.model.Post"
			parameterType="map">

	
		SELECT
			`id`
			, `userId`
			, `userName`
			, `userNickname`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
			
		
	</select>


 	<!-- 검색목록 -->
 	<select id="selectSearchList"
 			resultType="com.yhj3211.investment.post.model.Post">
 		
 		SELECT
 			`id`
 			, `userId`
 			, `userNickname`
 			, `userName`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			1=1
 	
 		<!-- 검색 조건이 null이 아니라면 검색조건에 따른 데이터 조회-->
 	
 		<if test="search != null">
 		
 			<!-- 검색 조건이 제목일 때 -->
 			<if test="search == 'title'">
 				and `title` like CONCAT('%', #{keyword}, '%')
 			</if>
 			
 			<!-- 검색 조건이 닉네임일 때 -->
 			<if test="search == 'nickName'">
 				and `userNickname` like CONCAT('%', #{keyword}, '%')
 			</if>
 			
 		</if>
 	
 			
 			
 	
 	</select>
		
		<!-- 글 삭제 -->
	<delete id="deletePost"
			parameterType="map">
	
		DELETE FROM
			`post`
		WHERE
			`id` = #{postId}
		AND
			`userId` = #{userId}
	
	</delete>
 
 
 <!-- 글 수정 -->
 	<update id="updatePost"
 			parameterType="map">
 	
 		UPDATE `post`
 		SET 
 			`title` = #{title},
 			`content` = #{content},
 			`imagePath` = #{imagePath}
 		WHERE
 			`userId` = #{userId}
 		AND
 			`id` = #{id}
 		
 	</update>
 
 <!-- 이미지 없이 글 수정 -->
 	<update id="updatePostNontImage"
 			parameterType="map"> 
 		
 		UPDATE `post`
 		SET 
 			`title` = #{title},
 			`content` = #{content}
 		WHERE
 			`userId` = #{userId}
 		AND
 			`id` = #{id}
 	</update>
 
 
 </mapper>